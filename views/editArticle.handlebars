<form action="/modify/{{article_id}}" method="POST">
  <div class="form mb-3">
    <label for="title">    Title: </label>
    <input type="text" name="title" id="title" value="{{this.title}}" required>
  </div>

  <div class="form mb-3">
    <textarea id="article" name="article" rows="4" cols="50">{{this.content}}</textarea>
  </div>

  <div>
    <input type="hidden" value="{{article_id}}">
    <input type="submit" value="SUBMIT!" class="btn btn-primary">
  </div>
</form>
<a href="/myArticles"><button class="btn btn-secondary">Go Back</button></a>